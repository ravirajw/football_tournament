rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Players collection rules
    match /players/{player} {
      allow read, write: if true;
    }

    // Tournament collection rules
    match /tournaments/{tournamentId} {
      // Anyone can read tournaments (public viewing)
      allow read: if true;
      
      // Anyone can create and update tournaments
      // In production, add authentication checks
      allow create, update: if true;
      
      // Only allow delete if needed (consider disabling in production)
      allow delete: if true;
    }
  }
}
